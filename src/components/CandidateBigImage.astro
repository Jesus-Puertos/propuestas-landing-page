---
import CandidateTitleName from "@/components/CandidateTitleName.astro"

interface Props {
	readonly id: string
	readonly name: string
	readonly loading?: "lazy" | "eager"
}

const { name, id, loading } = Astro.props
---
	
<picture
class:list={"candidate-photo aspect-[285/428] h-auto w-full max-w-[460px]"}
transition:name="candidate-big-image"

>
<img
	decoding="async"
	class="aspect-[285/428] h-auto w-full object-contain"
	alt={`FotografÃ­a de ${name}`}
	src={`/img/candidates/${id}-big.webp`}
	style="
		filter: drop-shadow(0 0 5px rgba(255, 165, 0, .5));
		mask-image: linear-gradient(to bottom, orange 80%, transparent 100%);
	"
	loading={loading}
/>
</picture>

<div
class="relative z-10 flex max-w-md flex-col items-center justify-center text-wrap mt-[-110px] lg:mt-[-120px] lg:ml-4"
transition:name="candidate-name"
>

<CandidateTitleName name={name} />

<img
	decoding="async"
	transition:name="candidate-flag"
	class:list={"candidate-flag  pointer-events-none aspect-[3/2] h-auto w-48 object-contain object-center"}
	alt={`Bandera de Movimiento Ciudadano, del candidato ${name}`}
	src={`/img/flags/mc.png`}
	loading={loading}
/>
</div>


<style></style>